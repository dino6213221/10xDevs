---
import "../styles/global.css";
import { Navigation } from "../components/Navigation";

interface Props {
  title?: string;
  showNavigation?: boolean;
}

const { title = "AI Flashcards", showNavigation = true } = Astro.props;

// Check user authentication state from middleware
const isAuthenticated = !!Astro.locals.user;
const userEmail = Astro.locals.user?.email;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showNavigation && <Navigation isAuthenticated={isAuthenticated} userEmail={userEmail} client:load />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
